{
  "extends": ["warp"],
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "browser": true
  },
  "globals": {
    "module": true,
    "require": true,
    "global": true
  },
  "rules": {
    "space-before-blocks": [2, "never"],
    "consistent-this": [2, "_this"],
    "semi": [2, "always", {"omitLastInOneLineBlock": true}],
    "curly": 0,
    "func-style": 0,
    "func-name-matching": 0
  }
}
